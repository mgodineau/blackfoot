#version 430

layout (local_size_x=1, local_size_y=1) in;
layout (rgba32f, binding=0) uniform image2D img_output;


void main() {
	
    vec4 pixel = vec4(.0,.5,1.0,1.0);
	
	for( int x=0; x<600; x++ ) {
		for( int y=0; y<400; y++ ) {
			ivec2 coords = ivec2( x, y );
		
		  	imageStore(img_output, coords, pixel);
		}
	}
	
	
}